<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_rectangle"
    android:layout_marginTop="16dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/bg_white_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_msg"/>

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#f75002"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="Notification Header_Length..."
        app:layout_constraintLeft_toRightOf="@id/img_profile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_profile"/>

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000000"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="7.1sp"
        android:text="3 min ago"
        android:fontFamily="@font/lato_light"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/txt_msg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_msg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000000"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="7.1sp"
        android:text="First two lines of the notification sub
text breifly explaining."
        android:fontFamily="@font/lato_light"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@id/txt_msg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_time"/>

</androidx.constraintlayout.widget.ConstraintLayout>