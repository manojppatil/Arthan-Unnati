<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_app">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_rm_toolbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_app"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_upload_doc_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_pan_card"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_margin="32dp"
            android:textSize="12sp"
            android:textColor="#696969"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="6.5sp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/start_adding_the_details_of_your_125th_sale_choose_any_one_of_the_following_to_continue" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/green_tick"
            android:id="@+id/pan_accepted"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_upload_doc_msg"
            app:layout_constraintBottom_toTopOf="@id/txt_aadhar_card"
            app:layout_constraintVertical_chainStyle="packed"
            />
        <TextView
            android:id="@+id/txt_pan_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_upload_doc_msg"
            app:layout_constraintBottom_toTopOf="@id/txt_aadhar_card"
            app:layout_constraintVertical_chainStyle="packed"
            android:drawableLeft="@drawable/ic_document_attach_pending"
            android:drawablePadding="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#696969"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="6.5sp"
            android:textStyle="bold"
            android:text="@string/pan_card"
            android:fontFamily="@font/lato_bold"
            android:background="@drawable/bg_white_rectangle"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/green_tick"
            android:id="@+id/adhar_accepted"
            android:visibility="gone"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_pan_card"
            app:layout_constraintBottom_toTopOf="@id/txt_voter_id"
            app:layout_constraintVertical_chainStyle="packed"
            />
        <TextView
            android:id="@+id/txt_aadhar_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_pan_card"
            app:layout_constraintBottom_toTopOf="@id/txt_voter_id"
            app:layout_constraintVertical_chainStyle="packed"
            android:drawablePadding="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_document_attach_pending"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#696969"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="6.5sp"
            android:textStyle="bold"
            android:text="@string/aadhar_card"
            android:fontFamily="@font/lato_bold"
            android:background="@drawable/bg_white_rectangle"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/green_tick"
            android:id="@+id/voter_accepted"
            android:visibility="gone"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_aadhar_card"
            app:layout_constraintBottom_toTopOf="@id/txt_applicant_phot"
            />
        <TextView
            android:id="@+id/txt_voter_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_aadhar_card"
            app:layout_constraintBottom_toTopOf="@id/txt_applicant_phot"
            app:layout_constraintVertical_bias="0"
            android:drawablePadding="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_document_attach_pending"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#696969"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="6.5sp"
            android:text="@string/voter_id"
            android:textStyle="bold"
            android:fontFamily="@font/lato_bold"
            android:background="@drawable/bg_white_rectangle"/>

        <ImageView
            android:id="@+id/applicant_accepted"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/green_tick"
            app:layout_constraintBottom_toBottomOf="@+id/txt_applicant_phot"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txt_voter_id" />
        <TextView
            android:id="@+id/txt_applicant_phot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_voter_id"
            app:layout_constraintBottom_toTopOf="@id/btn_next"
            app:layout_constraintVertical_bias="0"
            android:drawablePadding="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_document_attach_pending"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#696969"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="6.5sp"
            android:text="Applicant Photo"
            android:textStyle="bold"
            android:fontFamily="@font/lato_bold"
            android:background="@drawable/bg_white_rectangle"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            android:gravity="center"
            android:enabled="false"
            android:background="@drawable/ic_next_disable"
            android:textColor="#c4c4c4"
            android:textStyle="bold"
            android:text="@string/next"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:fontFamily="@font/lato_black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
