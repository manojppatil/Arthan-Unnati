<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/bg_white_rectangle">

    <ImageView
        android:id="@+id/img_rm_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/bg_upload_photo"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_rm_name"/>

    <TextView
        android:id="@+id/txt_rm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:letterSpacing="0.03"
        android:text="RMs Full Name_1"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/lato_black"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/img_rm_profile"
        app:layout_constraintBottom_toBottomOf="@id/img_rm_profile"
        app:layout_constraintLeft_toRightOf="@id/img_rm_profile"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txt_rm_employee_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#696969"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="7.1sp"
        android:text="Employee ID"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/txt_rm_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_rm_profile"/>

    <TextView
        android:id="@+id/txt_rm_leads"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#696969"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Leads"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@id/txt_rm_name"
        app:layout_constraintRight_toLeftOf="@id/txt_rm_leads_count"
        app:layout_constraintTop_toBottomOf="@id/txt_rm_employee_id"/>

    <TextView
        android:id="@+id/txt_rm_leads_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#696969"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="32"
        android:gravity="right"
        android:layout_marginRight="48dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_rm_leads"
        app:layout_constraintTop_toTopOf="@id/txt_rm_leads"
        app:layout_constraintBottom_toBottomOf="@id/txt_rm_leads"/>

    <TextView
        android:id="@+id/txt_rm_screening"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#696969"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Screening"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@id/txt_rm_name"
        app:layout_constraintRight_toLeftOf="@id/txt_rm_screening_count"
        app:layout_constraintTop_toBottomOf="@id/txt_rm_leads"/>

    <TextView
        android:id="@+id/txt_rm_screening_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#696969"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="32"
        android:gravity="right"
        android:layout_marginRight="48dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_rm_screening"
        app:layout_constraintTop_toTopOf="@id/txt_rm_screening"
        app:layout_constraintBottom_toBottomOf="@id/txt_rm_screening"/>

    <TextView
        android:id="@+id/txt_rm_pending"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#696969"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Pending"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@id/txt_rm_name"
        app:layout_constraintRight_toLeftOf="@id/txt_rm_pending_count"
        app:layout_constraintTop_toBottomOf="@id/txt_rm_screening"/>

    <TextView
        android:id="@+id/txt_rm_pending_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#696969"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="32"
        android:gravity="right"
        android:layout_marginRight="48dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_rm_pending"
        app:layout_constraintTop_toTopOf="@id/txt_rm_pending"
        app:layout_constraintBottom_toBottomOf="@id/txt_rm_pending"/>


</androidx.constraintlayout.widget.ConstraintLayout>