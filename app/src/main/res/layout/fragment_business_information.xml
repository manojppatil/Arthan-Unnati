            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/no_of_employee_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_no_of_employees"
