            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/no_of_employee_plus_button"
            app:layout_constraintEnd_toStartOf="@+id/no_of_employee_plus_button"
            app:layout_constraintStart_toEndOf="@+id/no_of_employee_minus_button"
            app:layout_constraintTop_toTopOf="@+id/no_of_employee_plus_button" />

        <Button
