            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/txt_partners"
            app:layout_constraintTop_toBottomOf="@+id/tl_ssi_registration_id"
            app:layout_constraintVertical_chainStyle="packed"
            app:switchPadding="8dp" />

