            android:visibility="gone"

            android:lineSpacingExtra="8.3sp"
            android:text="Form 61"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/switch_form_61"
            app:layout_constraintEnd_toStartOf="@+id/switch_form_61"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/switch_form_61" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_form_61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:checked="false"
            android:fontFamily="@font/lato_regular"
            android:padding="4dp"
            android:visibility="gone"

            android:text="no"
            android:textColor="#696969"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/txt_form_61"
            app:layout_constraintTop_toBottomOf="@+id/tl_pan_id"
            app:layout_constraintVertical_chainStyle="packed"
            app:switchPadding="8dp" />

