<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="30dp"
    android:background="@drawable/bg_white_rectangle"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/txt_business"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/screening_item_indicator"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="6sp"
        android:text="Dairy"
        android:textColor="#0b41af"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:letterSpacing="0.03"
        android:text="Customer Name"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txt_date"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_business" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:gravity="right"
        android:letterSpacing="0.03"
        android:text="12 Sep'19"
        android:textColor="#696969"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/txt_customer_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_customer_name"
        app:layout_constraintTop_toTopOf="@+id/txt_customer_name" />

    <TextView
        android:id="@+id/txt_loan_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:letterSpacing="0.03"
        android:text="Loan iD"
        android:textColor="#696969"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_amount"
        app:layout_constraintTop_toBottomOf="@+id/txt_customer_name" />

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawablePadding="4dp"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="4.5 Lakh"
        android:textColor="#696969"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/txt_loan_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_loan_id"
        app:layout_constraintBottom_toBottomOf="@id/txt_loan_id"/>

    <TextView
        android:id="@+id/txt_mobile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:letterSpacing="0.03"
        android:text="12 Sep'19"
        android:textColor="#696969"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_branch"
        app:layout_constraintTop_toBottomOf="@+id/txt_loan_id" />

    <TextView
        android:id="@+id/txt_branch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawablePadding="4dp"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="4.5 Lakh"
        android:textColor="#696969"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/txt_mobile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_mobile"
        app:layout_constraintBottom_toBottomOf="@id/txt_mobile"/>

</androidx.constraintlayout.widget.ConstraintLayout>

