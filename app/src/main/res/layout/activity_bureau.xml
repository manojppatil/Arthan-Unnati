<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_bm_toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app"
        android:padding="24dp">

        <TextView
            android:id="@+id/txt_customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="8.3sp"
            android:text="Customer Name"
            android:textColor="#404040"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato_black"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="8.3sp"
            android:text="Score"
            android:textColor="#404040"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/txt_score_value"
            app:layout_constraintTop_toBottomOf="@id/txt_customer_name" />

        <TextView
            android:id="@+id/txt_score_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:gravity="right"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="8.3sp"
            android:text="750"
            android:textColor="#404040"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/txt_score"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toRightOf="@id/txt_score"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_score" />

        <Button
            android:id="@+id/btn_view_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_next_enabled"
            android:fontFamily="@font/lato_black"
            android:gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingLeft="36dp"
            android:paddingTop="8dp"
            android:paddingRight="36dp"
            android:paddingBottom="8dp"
            android:text="View Report"
            android:textColor="#c4c4c4"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_score"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/customer_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_view_report"
            tools:visibility="visible">

            <TextView
                android:id="@+id/txt_inquiry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:gravity="center_horizontal"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="8.3sp"
                android:text="Inquiry"
                android:textColor="#404040"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_inquiry_count"
                app:layout_constraintEnd_toStartOf="@id/txt_inquiry_count"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/customer_detail"
                app:layout_constraintTop_toTopOf="@+id/txt_inquiry_count" />

            <TextView
                android:id="@+id/txt_inquiry_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="8.3sp"
                android:text="6"
                android:textColor="#404040"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/customer_detail"
                app:layout_constraintStart_toEndOf="@+id/txt_inquiry"
                app:layout_constraintTop_toTopOf="@+id/customer_detail" />

            <TextView
                android:id="@+id/txt_account_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lato_black"
                android:gravity="center_horizontal"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="8.3sp"
                android:text="Account Summary"
                android:textColor="#404040"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_inquiry_count" />

            <TextView
                android:id="@+id/txt_field1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:gravity="center_horizontal"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="8.3sp"
                android:text="Field1"
                android:textColor="#404040"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_value1"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/txt_value1"
                app:layout_constraintTop_toTopOf="@+id/txt_value1" />

            <TextView
                android:id="@+id/txt_value1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="8.3sp"
                android:text="Value1"
                android:textColor="#404040"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toRightOf="@+id/txt_field1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_account_summary" />

            <TextView
                android:id="@+id/txt_field2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:gravity="center_horizontal"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="8.3sp"
                android:text="Field2"
                android:textColor="#404040"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_value2"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/txt_value2"
                app:layout_constraintTop_toTopOf="@+id/txt_value2" />

            <TextView
                android:id="@+id/txt_value2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="8.3sp"
                android:text="Value2"
                android:textColor="#404040"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toRightOf="@+id/txt_field2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_value1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txt_coapplicant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lato_bold"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="8.3sp"
            android:text="Co-Applicant"
            android:textColor="#404040"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customer_detail" />

        <TextView
            android:id="@+id/txt_guarantor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_bold"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="8.3sp"
            android:text="Guarantor"
            android:textColor="#404040"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_coapplicant" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>