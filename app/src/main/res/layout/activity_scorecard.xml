<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_rm_toolbar" />
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:gravity="center_horizontal"
            android:text="Demographic Score"
            />
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_weight="0.1"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text=" : "/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:id="@+id/demographic_value"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:textStyle="normal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"

            android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:text="Financial Score"
            android:gravity="center_horizontal"

            android:layout_height="wrap_content"
            android:textStyle="normal"
            />
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_weight="0.1"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text=" : "/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:gravity="center_horizontal"

                android:id="@+id/financialScoreValue"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"

            android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text="Alternate Score"
            android:gravity="center_horizontal"

            android:textStyle="normal"
            />
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_weight="0.1"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text=" : "/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:id="@+id/alternate_score"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:textStyle="normal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"

            android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:gravity="center_horizontal"

            android:text="Customer Risk Profile"
            />
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_weight="0.1"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text=" : "/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:id="@+id/riskValue"
                android:textStyle="normal"
                />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_next_enabled"
            android:textColor="#fff"
            android:id="@+id/ok"/>


    </LinearLayout>
</LinearLayout>