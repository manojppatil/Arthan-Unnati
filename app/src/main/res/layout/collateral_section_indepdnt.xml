            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_add_photo"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/divider"
                android:id="@+id/shop1"/>
