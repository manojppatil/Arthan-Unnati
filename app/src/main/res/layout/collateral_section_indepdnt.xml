                    android:textStyle="bold"

                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/sp_relaionShipApplicant"
