<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_rectangle"
    android:layout_margin="16dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_bank_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#f75002"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="ICICI"
        android:fontFamily="@font/lato_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_avg_bal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#696969"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Average Bank Balance"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_avg_bal_amt"
        app:layout_constraintTop_toBottomOf="@id/txt_bank_name"/>

    <TextView
        android:id="@+id/txt_avg_bal_amt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="â‚¹ 15,000"
        android:gravity="right"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/txt_avg_bal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_avg_bal"
        app:layout_constraintBottom_toBottomOf="@id/txt_avg_bal"/>

    <TextView
        android:id="@+id/txt_emi_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#696969"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="7.1sp"
        android:text="Taken on 5th of every month"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_avg_bal"/>

    <TextView
        android:id="@+id/txt_credit_summation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#0b41af"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Total Net Credits"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="@font/lato_black"
        android:background="@drawable/bg_white_rectangle"
        android:backgroundTint="#eef8fa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_emi_date"/>

    <TextView
        android:id="@+id/txt_bounces"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#0b41af"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Total Cash Deposit"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="@font/lato_black"
        android:background="@drawable/bg_white_rectangle"
        android:backgroundTint="#eef8fa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_credit_summation"/>

    <TextView
        android:id="@+id/txt_debit_summation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#0b41af"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Inward Bounce"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="@font/lato_black"
        android:background="@drawable/bg_white_rectangle"
        android:backgroundTint="#eef8fa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_bounces"/>

    <TextView
        android:id="@+id/txt_abb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#0b41af"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Outward Bounce"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="@font/lato_black"
        android:background="@drawable/bg_white_rectangle"
        android:backgroundTint="#eef8fa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_debit_summation"/>

    <TextView
        android:id="@+id/txt_no_of_credit_entries"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#0b41af"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="EMI Count"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="@font/lato_black"
        android:background="@drawable/bg_white_rectangle"
        android:backgroundTint="#eef8fa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_abb"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#0b41af"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="EMI Amt"
        android:id="@+id/emiAmt"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="@font/lato_black"
        android:background="@drawable/bg_white_rectangle"
        android:backgroundTint="#eef8fa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_no_of_credit_entries"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#0b41af"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="View Graph"
        android:id="@+id/showAcGraph"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="@font/lato_black"
        android:background="@drawable/bg_white_rectangle"
        android:backgroundTint="#eef8fa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_no_of_credit_entries"/>

</androidx.constraintlayout.widget.ConstraintLayout>