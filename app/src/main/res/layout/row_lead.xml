<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/bg_white_rectangle"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/txt_occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_retrived_document_indicator"
        android:drawablePadding="8dp"
        android:fontFamily="@font/lato_black"
        android:gravity="center_vertical"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="6sp"
        android:text="Dairy"
        android:textColor="#0b41af"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_reopen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_oval_rect"
        android:fontFamily="@font/lato_black"
        android:minHeight="0dp"
        android:padding="2dp"
        android:text="Reject"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@id/txt_occupation"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/txt_occupation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_occupation" />

    <TextView
        android:id="@+id/txt_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0.03"
        android:text="Customer Name: Rahul"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_sourcing_date"
        app:layout_constraintTop_toBottomOf="@id/txt_occupation" />

    <TextView
        android:id="@+id/txt_sourcing_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/lato_regular"
        android:gravity="right"
        android:letterSpacing="0.03"
        android:text="12 Sep'19"
        android:textColor="#696969"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/txt_customer_name"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/txt_customer_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_customer_name" />

    <TextView
        android:id="@+id/txt_loan_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Loan Id: "
        android:textColor="#696969"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_loan_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_customer_name" />

    <TextView
        android:id="@+id/txt_loan_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Loan Amount: â‚¹200000"
        android:textColor="#696969"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_loan_id"
        app:layout_constraintTop_toBottomOf="@id/txt_customer_name" />

    <ImageView
        android:id="@+id/call_button"
        android:layout_width="13dp"
        android:layout_height="15dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/ic_call"
        app:layout_constraintBottom_toBottomOf="@+id/txt_contact_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_contact_number" />

    <ImageView
        android:id="@+id/whats_app_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_whats_app"
        app:layout_constraintBottom_toBottomOf="@+id/txt_contact_number"
        app:layout_constraintStart_toEndOf="@+id/call_button"
        app:layout_constraintTop_toTopOf="@+id/txt_contact_number" />

    <TextView
        android:id="@+id/txt_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="+91987654210"
        android:textColor="#696969"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/whats_app_button"
        app:layout_constraintTop_toBottomOf="@+id/txt_loan_amount" />


    <TextView
        android:id="@+id/txt_stage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Location: Mumbai"
        android:textColor="#696969"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@id/txt_loan_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>

