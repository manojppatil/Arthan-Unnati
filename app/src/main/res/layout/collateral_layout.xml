<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_white_rectangle"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar">

    <ImageView
        android:id="@+id/remove_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:foregroundGravity="center"
        android:padding="4dp"
        android:src="@drawable/ic_close"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_property_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/lato_light"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="7.1sp"
        android:text="Type Of Property"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_property_type_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Value"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_profile"
        app:layout_constraintTop_toBottomOf="@id/txt_property_type" />

    <TextView
        android:id="@+id/txt_jurisdiction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_light"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="7.1sp"
        android:text="Jurisdiction"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_profile"
        app:layout_constraintTop_toBottomOf="@id/txt_property_type_value" />

    <TextView
        android:id="@+id/txt_jurisdiction_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Pune"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_profile"
        app:layout_constraintTop_toBottomOf="@id/txt_jurisdiction" />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="108dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_upload_photo"
        android:backgroundTint="#f8f8f8"
        android:foregroundGravity="center"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_add_photo"
        android:tint="#939393"
        app:layout_constraintBottom_toBottomOf="@id/txt_jurisdiction_value"
        app:layout_constraintStart_toEndOf="@id/txt_property_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_property_type" />

    <TextView
        android:id="@+id/txt_tentative_value_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Tentative Value"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_tentative_value"
        app:layout_constraintTop_toBottomOf="@id/txt_jurisdiction_value" />

    <TextView
        android:id="@+id/txt_tentative_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="₹ 40,000"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/txt_tentative_value_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_tentative_value_msg" />

    <TextView
        android:id="@+id/txt_property_value_basedon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_light"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="7.1sp"
        android:text="As per BCM"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/txt_tentative_value_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_tentative_value_msg" />

    <TextView
        android:id="@+id/txt_market_value_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="Market Value"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_market_value"
        app:layout_constraintTop_toBottomOf="@id/txt_property_value_basedon" />

    <TextView
        android:id="@+id/txt_market_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:text="₹ 50,000"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/txt_market_value_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_market_value_msg" />

    <TextView
        android:id="@+id/txt_market_value_basedon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_light"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="7.1sp"
        android:text="As per Emperical Value"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/txt_market_value_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_market_value_msg" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#eef8fa"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:fontFamily="@font/lato_black"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="8.3sp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="View Tech Report"
        android:textColor="#0b41af"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_market_value_basedon" />

</androidx.constraintlayout.widget.ConstraintLayout>